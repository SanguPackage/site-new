extends ../skeleton.jade

mixin createDonateButton(paypalCode, amount, tooltip, title)
	.col-md-4
		.row <b>#{title}</b>
		.row.
			<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
			<input type="hidden" name="cmd" value="_s-xclick">
			<input type="hidden" name="hosted_button_id" value="#{paypalCode}">
			<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif" border="0" name="submit" title="#{tooltip}">
			<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
			<br>Donate â‚¬#{amount}


