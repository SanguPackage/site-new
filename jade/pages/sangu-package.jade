extends ../skeleton.jade

block content
	.jumbotron
		.container
			#sp-dutch-only.alert.alert-success.
				The Sangu Package is a Greasemonkey script which is allowed only on NL and DE servers!
				<br>
				<strong>Germans</strong>: Adding support for die-staemme.de is probably allowed! See <a href="support">Contributing</a>

			h2 Sangu Package <small>Minder kliks, meer actie!</small>
			.small-to-h2.small.text-muted
				| Laatste update: #{releaseDate} (v#{version})
				img.browsers-supported(src="img/sp/browsers-supported.png", data-ot="Chrome, Firefox en Opera zijn ondersteund!")

			.row
				.col-md-4
				.col-md-4
				.col-md-4
					h5.text-center
						| oeps


			p.button-spacing-left
				a.btn.btn-default(target="_blank", data-ot="Installeren via de Chrome Web Store!", href="https://chrome.google.com/webstore/detail/sangu-package/fhmbjphafbpdphffjihgekljkcchcdem?hl=en&gl=BE")
					img(src="img/ChromeWebStore.png", width="32", height="34")

				a.btn.btn-success.btn-lg(href="api/sangupackage.user.js") Downloaden

	.container
		#features-title.row
			.well.well-sm.
				<strong>Een verzameling van kleine <small>en minder kleine...</small> scripts om
				het spelen van Tribal Wars aangenamer en sneller
				te laten verlopen</strong>

		#features.row
			.col-md-4
				.well.well-lg
					img(src="img/sp/rich-in-features.png")
					h3.rich-in-features-img-text Verrijkt ongeveer elke TW pagina

			.col-md-4
				.well.well-lg
					img(src='img/sp/auto-world-settings.png')
					h3 Kent jouw wereld instellingen


			.col-md-4
				.well.well-lg
					img(src='img/sp/big-accounts.png')
					h3 Gemaakt voor grote accounts en PA


	.container
		hr

		.row
			.col-md-4
				h3 Installeren
				include ../includes/sangu-package/install-instructions


			.col-md-4
				h3 wat hier nu

			.col-md-4
				h3 Tutorials
				div We wachten op Edje... :p



block scripts
	script(src='js/sp.js')

block css
	link(rel='stylesheet', href='css/sangu-package.css')